.left-panel
  .editor
    = form_for [:admin, @publication] do |f|
      %fieldset
        = f.label :title
        = f.text_field :title, placeholder: "Title"
      %fieldset
        = f.label :content
        = f.text_area :content, placeholder: "Content"
      %fieldset
        = f.submit "Save"
    .attachments
      - @publication.tracks.each do |track|
        .track= track
.right-panel
  %ul
    - @tracks.each do |track|
      %li{draggable: "true"}= track
